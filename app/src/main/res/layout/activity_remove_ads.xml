<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.RemoveAdsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.packages">


        <ImageView
            android:id="@+id/packagesimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="76dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/packagepic" />

        <TextView
            android:id="@+id/premiumaccesstext"
            android:layout_width="280dp"
            android:layout_height="41dp"
            android:layout_marginTop="60dp"
            android:text="Get Premium Access"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.68"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/packagesimg" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/one_month"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:background="@drawable/premium_onemonth"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/premiumaccesstext">

        </androidx.appcompat.widget.AppCompatButton>

        <TextView
            android:id="@+id/onemonth_text"
            android:layout_width="101dp"
            android:layout_height="31dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:text="1 Month"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/one_month"
            app:layout_constraintTop_toBottomOf="@+id/premiumaccesstext" />

        <TextView
            android:id="@+id/sixhundred_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:text="6,00/Month"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/one_month"
            app:layout_constraintStart_toStartOf="@+id/one_month"
            app:layout_constraintTop_toTopOf="@+id/one_month"
            app:layout_constraintVertical_bias="0.567" />

        <TextView
            android:id="@+id/one_fifty_permonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="| 150/per week"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/one_month"
            app:layout_constraintEnd_toEndOf="@+id/one_month"
            app:layout_constraintHorizontal_bias="0.664"
            app:layout_constraintStart_toEndOf="@+id/onemonth_text"
            app:layout_constraintTop_toTopOf="@+id/one_month"
            app:layout_constraintVertical_bias="0.323" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/oneYearbtn"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:background="@drawable/premium_onemonth"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/one_month">

        </androidx.appcompat.widget.AppCompatButton>

        <TextView
            android:id="@+id/one_yeartxt"
            android:layout_width="101dp"
            android:layout_height="31dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="24dp"
            android:text="1 Year"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/oneYearbtn"
            app:layout_constraintTop_toBottomOf="@+id/one_month" />

        <TextView
            android:id="@+id/oneyear_sixmonthtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="32dp"
            android:text="6,00/Month"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/oneYearbtn"
            app:layout_constraintTop_toTopOf="@+id/oneYearbtn" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="| 150/per week"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.514"
            app:layout_constraintStart_toEndOf="@+id/one_yeartxt"
            app:layout_constraintTop_toTopOf="@+id/oneYearbtn" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/life_timebtn"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:background="@drawable/premium_onemonth"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oneYearbtn">

        </androidx.appcompat.widget.AppCompatButton>

        <TextView
            android:id="@+id/lifetime_text"
            android:layout_width="101dp"
            android:layout_height="31dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="30dp"
            android:text="Life Time"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/life_timebtn"
            app:layout_constraintTop_toBottomOf="@+id/oneYearbtn" />

        <TextView
            android:id="@+id/sixthousand_lifetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="25dp"
            android:text="6,000/Month"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/life_timebtn"
            app:layout_constraintStart_toStartOf="@+id/life_timebtn"
            app:layout_constraintTop_toTopOf="@+id/life_timebtn"
            app:layout_constraintVertical_bias="0.567" />

        <TextView
            android:id="@+id/six_thousandonetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="| 6,000/1 Time"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginTop="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/life_timebtn"
            app:layout_constraintEnd_toEndOf="@+id/life_timebtn"
            app:layout_constraintHorizontal_bias="0.664"
            app:layout_constraintStart_toEndOf="@+id/lifetime_text"
            app:layout_constraintTop_toTopOf="@+id/life_timebtn"
            app:layout_constraintVertical_bias="0.323" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancel_noadbtn"
            android:layout_width="165dp"
            android:layout_height="70dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/howtodownload_btnshape"
            android:backgroundTint="@color/cancelbtnremoveads"
            android:text="@string/cancelbtn"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/life_timebtn" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buynow_noadsbtn"
            android:layout_width="165dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:text="@string/buynowbutton"
            android:textColor="@color/white"
            android:backgroundTint="@color/buynowbtnremoveads"
            android:background="@drawable/howtodownload_btnshape"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/life_timebtn" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>