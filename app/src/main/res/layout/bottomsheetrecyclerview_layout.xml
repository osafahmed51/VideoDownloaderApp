<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="20dp"
    >


        <TextView
            android:id="@+id/bottomsheet_textvone"
            android:layout_width="95dp"
            android:layout_height="53dp"
            android:background="@drawable/bottombuttons_background"
            android:gravity="center|top"
            android:text="@string/bottomsheetbtn1"
            android:textSize="19sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


        </TextView>

        <TextView
            android:id="@+id/bottomsheettextvtwo"
            android:textSize="14.5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bottomsheetsize1"
            app:layout_constraintBottom_toBottomOf="@+id/bottomsheet_textvone"
            app:layout_constraintEnd_toEndOf="@+id/bottomsheet_textvone"
            app:layout_constraintStart_toStartOf="@+id/bottomsheet_textvone"
            app:layout_constraintTop_toTopOf="@+id/bottomsheet_textvone"
            app:layout_constraintVertical_bias="0.8" />

</androidx.constraintlayout.widget.ConstraintLayout>
